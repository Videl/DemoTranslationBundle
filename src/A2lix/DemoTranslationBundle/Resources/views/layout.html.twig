{% extends "::base.html.twig" %}

{% block title %}Demo Translation Bundle | @2LiX{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/a2lixtranslationform/css/a2lix_translation.css') }}" />
<link rel="stylesheet" href="{{ asset('bundles/a2lixdemotranslation/css/main.css') }}" />    
{% endblock %}

{% block body %}
<header>
    Change locale :
    <ul>
    {% for locale in locales %}
        <li><a href="{{ path(app.request.get('_route'), { '_locale' : locale}) }}">{{ locale }}</a></li>
    {% endfor %}
    </ul>
</header>
<section class="main">
    {% block content %}{% endblock %}
</section>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('bundles/a2lixdemotranslation/js/jquery-1.8.0.min.js') }}"></script>
<script src="{{ asset('bundles/a2lixdemotranslation/js/main.js') }}"></script>
{% endblock %}